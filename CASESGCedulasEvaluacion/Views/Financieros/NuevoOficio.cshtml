@model CedulasEvaluacion.Entities.MFinancieros.Oficio;
@{
    ViewData["Title"] = "Envío de Cédulas a DGPPT";
    var i = 0;
}

<div class="container-fluid">
    <a href="/financieros/detalle/@Model.Servicio" type='button' class='btn-sm btn-warning float-right mr-2 mb-2' data-toggle="tooltip" title="Regresar al Detalle de Cédulas de @Model.Servicio" data-placement="top"><i class="fal fa-arrow-left"></i></a>
    <div class="row col-lg-12 mt-5">
        <table class="table">
            <tr>
                <td data-toggle="tooltip" title="Folio del Oficio para Trámite de Pago de Servicios" data-placement="top"><strong>Número de Oficio: </strong> @Model.NumeroOficio/@Model.Anio</td>
                <td data-toggle="tooltip" title="Año del Oficio" data-placement="top"><strong>Año: </strong>@Model.Anio</td>
                <td><strong data-toggle="tooltip" title="Servicio Evaluado" data-placement="top">Servicio: </strong>@Model.Servicio</td>
                <td data-toggle="tooltip" title="Estatus del Oficio para Trámite" data-placement="top"><strong>Estatus: </strong>@Model.Estatus</td>
            </tr>
        </table>
    </div>
    <div class="card">
        <div class="card-header bg-joke text-white">
            <h5 class="mt-2">Trámite de Oficio</h5>
        </div>
        <div class="card-body">
            <div class="row ">
                <div class="col-lg-12">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        @if (@Model.Estatus.Equals("En Proceso")) {
                            <li class="nav-item" role="presentation">
                                <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#pregunta_1" role="tab" aria-controls="profile" aria-selected="false">Cédulas en Trámite de Pago</a>
                            </li>
                         }
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#pregunta_2" role="tab" aria-controls="profile" aria-selected="false">Cédulas para Enviar a DGPPT</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        @if (@Model.Estatus.Equals("En Proceso"))
                        {
                            @* Cédulas en Trámite de Pago *@
                            <div class="tab-pane fade mt-2 ml-3 show active" id="pregunta_1" role="tabpanel" aria-labelledby="profile-tab">
                                <p class="text-black h5">Cédulas pendientes de enviar a "DGPPT"</p>
                                <div class="col-lg-12 mt-3">
                                    <table class="table" width="100%" id="tblPendientes">
                                        <thead>
                                            <tr class="text-center">
                                                <th>#</th>
                                                <th>Servicio</th>
                                                <th>Mes</th>
                                                <th>Folio</th>
                                                <th>Subtotal</th>
                                                <th>IVA</th>
                                                <th>Total</th>
                                                <th>Estatus</th>
                                                <th>¿ Enviar a DGPPT ?</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tblTrmaite">
                                            @foreach (var ced in @Model.detalleCedulas)
                                            {
                                                i++;
                                                <tr class="text-center">
                                                    <td>@i</td>
                                                    <td>@ced.Servicio</td>
                                                    <td>@ced.Mes</td>
                                                    <td>@ced.Folio</td>
                                                    <td>@String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @ced.Subtotal)</td>
                                                    <td>@String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @ced.IVA)</td>
                                                    <td>@String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @ced.Total)</td>
                                                    <td>@ced.Estatus</td>
                                                    <td>
                                                        @if (@Model.cedulasOficio.Count == 0)
                                                        {
                                                            <div class="form-check-inline i-checks mt-3 enviarDGPPT2" data-id="@ced.Id">
                                                                <input class="enviarDGPPT" id="chk_@ced.Id" type="checkbox" data-size="small" data-toggle="toggle" data-on="<i class='fa fa-check'></i>" data-off="<i class='fa fa-times'></i>"
                                                                       data-onstyle="success" data-offstyle="danger" data-style="ios" value="@ced.Id" name="tramitar[]" checked data-id="@ced.Id" data-checked="true">
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="form-check-inline i-checks mt-3 enviarDGPPT2" data-id="@ced.Id">
                                                                <input class="enviarDGPPT" id="chk_@ced.Id" type="checkbox" data-size="small" data-toggle="toggle" data-on="<i class='fa fa-check'></i>" data-off="<i class='fa fa-times'></i>"
                                                                       data-onstyle="success" data-offstyle="danger" data-style="ios" value="@ced.Id" name="tramitar[]">
                                                            </div>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            @* Fin Cédulas en Trámite de Pago*@
                        }
                        @* Cédulas Asignadas en el Oficio *@
                        <div class="tab-pane fade mt-2 ml-3" id="pregunta_2" role="tabpanel" aria-labelledby="profile-tab">
                            <p class="text-black h5">Cédulas asignadas en el oficio para pago</p>
                            <div class="col-lg-12 mt-3">
                                @{ i = 0;}
                                <table class="table" width="100%" id="tblOficio">
                                    <thead>
                                        <tr class="text-center">
                                            <th>#</th>
                                            <th>Servicio</th>
                                            <th>Folio</th>
                                            <th>Subtotal</th>
                                            <th>IVA</th>
                                            <th>Total</th>
                                            <th>Estatus</th>
                                            @if (@Model.Estatus.Equals("En Proceso"))
                                            {
                                                <th>Acciones</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody id="tblTrmaite">
                                        @foreach (var ced in @Model.cedulasOficio)
                                        {
                                            i++;
                                            <tr class="text-center">
                                                <td>@i</td>
                                                <td>@ced.Servicio</td>
                                                <td>@ced.Folio</td>
                                                <td>@String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @ced.Subtotal)</td>
                                                <td>@String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @ced.IVA)</td>
                                                <td>@String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @ced.Total)</td>
                                                <td>@ced.Estatus</td>
                                                @if (@Model.Estatus.Equals("En Proceso"))
                                                {
                                                    <td>
                                                        <button class="btn btn-sm btn-danger eliminaCedula" data-toggle="tooltip" title="Eliminar Cédula del Oficio"
                                                                data-cedula="@ced.Id" data-folio="@ced.Folio" data-mes="@ced.Mes">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @* Cédulas Asignadas en el Oficio*@
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class=" col-lg-12">
                <button type="button" class="btn btn-primary float-right ml-3 btnTramitar">Trámitar Oficio</button>
                <button type="button" class="btn btn-success float-right btnGuardar">Guardar Oficio</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            var model = @Html.Raw(Json.Serialize(@Model));

            console.log(model);

            var table = $("#tblPendientes").DataTable({
                paging: true,
                bLengthChange: false,
                pageLength: 10,
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
                },
            });

            $("#tblOficio").DataTable({
                paging: true,
                bLengthChange: false,
                pageLength: 10,
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
                },
            });

            $(".btnGuardar").click(function () {
                var cedulas = new Array();

                table.$("input[type='checkbox']").each(function () {
                     var activo = $(this).parent().hasClass("off");
                    if (activo == false) {
                        cedulas.push({ OficioId: model.id, CedulaId: $(this).val(), ServicioId: model.servicioId });
                    }
                });

                axios.post("/financieros/inserta/cedulasOficio", cedulas).then(response => {
                   Swal.fire({
                       'icon': "success",
                       'title': 'Trámite de Oficio',
                        'html': "Se guardó el oficio para pago correctamente."
                   }).then(function () {
                       window.location.reload();
                   });
                });
            });

            $(".eliminaCedula").click(function () {
                var cedula = $(this).data('cedula');
                var folio = $(this).data('folio');
                var mes = $(this).data('mes');
                Swal.fire({
                    'icon': 'warning',
                    'title': 'Trámite de Oficio',
                    'html': '¿Está seguro de eliminar la cédula con el folio <b>' + folio + '</b> correspondiente al mes <b>' + mes + '</b>?',
                    'confirmButtonColor': '#3085d6',
                    'cancelButtonColor': '#d33',
                    'confirmButtonText': 'Si, deseo continuar',
                    'cancelButtonText': 'Cancelar',
                    'showCancelButton': true
                }).then(confirm => {
                    if (confirm.isConfirmed) {
                        axios.get('/financieros/elimina/cedulasOficio/' + model.id + '/' + model.servicioId + '/' + cedula).then(response => {
                            Swal.fire({
                                'icon': "success",
                                'title': 'Trámite de Oficio',
                                'html': "Se eliminó la cédula del oficio a DGPPT correctamente."
                            }).then(function () {
                                window.location.reload();
                            });
                        });
                    }
                });
            });

           

            function guardarEnviar() {
                var cedulas = new Array();

                $("[name='tramitar[]']:checked").each(function () {
                    if ($(this).attr("checked")) {
                        cedulas.push({ OficioId: model.id, CedulaId: $(this).val(), ServicioId: model.servicioId });
                    }
                });
                axios.post("/financieros/inserta/cedulasOficio", cedulas);
            }

            $(".btnTramitar").click(function () {
                guardarEnviar();
                Swal.fire({
                    'icon': 'warning',
                    'title': 'Trámite de Oficio',
                    'html': '¿Está seguro que desea <b>tramitar el oficio con el número: ' + model.numeroOficio + '/' + model.anio + '?',
                    'confirmButtonColor': '#3085d6',
                    'cancelButtonColor': '#d33',
                    'confirmButtonText': 'Si, tramitar',
                    'cancelButtonText': 'Cancelar',
                    'showCancelButton': true
                }).then(confirm => {
                    if (confirm.isConfirmed) {
                        axios.get("/financieros/envia/oficio/" + model.id+'/'+model.servicioId).then(response => {
                            Swal.fire({
                                'icon': "success",
                                'title': 'Trámite de Oficio',
                                'html': "Se envió el oficio a DGPPT correctamente."
                            }).then(function () {
                                window.location.href = "/financieros/detalle/" + model.servicio;
                            });
                        });
                    }
                });
            });
        });
    </script>
}


