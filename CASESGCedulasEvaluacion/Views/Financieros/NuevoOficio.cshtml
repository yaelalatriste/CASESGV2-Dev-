@model CedulasEvaluacion.Entities.MFinancieros.Oficio;
@{
    ViewData["Title"] = "Envío de Cédulas a DGPPT";
    var i = 0;
}

<div class="container-fluid">
    <a href="/financieros/detalle/@Model.Servicio" type='button' class='btn-sm btn-warning float-right mr-2 mb-2' data-toggle="tooltip" title="Regresar al Detalle de Cédulas de @Model.Servicio" data-placement="top"><i class="fal fa-arrow-left"></i></a>
    <div class="row col-lg-12 mt-5">
        <table class="table">
            <tr>
                <td data-toggle="tooltip" title="Folio del Oficio para Trámite de Pago de Servicios" data-placement="top"><strong>Número de Oficio: </strong> @Model.NumeroOficio/@Model.Anio</td>
                <td data-toggle="tooltip" title="Año del Oficio" data-placement="top"><strong>Año: </strong>@Model.Anio</td>
                <td><strong data-toggle="tooltip" title="Servicio Evaluado" data-placement="top">Servicio: </strong>@Model.Servicio</td>
                <td data-toggle="tooltip" title="Estatus del Oficio para Trámite" data-placement="top"><strong>Estatus: </strong>@Model.Estatus</td>
            </tr>
        </table>
    </div>
    <div class="card">
        <div class="card-header bg-joke text-white">
            <h5 class="mt-2">Trámite de Oficio</h5>
        </div>
        <div class="card-body">
            <div class="row ">
                <div class="col-lg-12">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#pregunta_1" role="tab" aria-controls="profile" aria-selected="false">Cédulas en Trámite de Pago</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#pregunta_2" role="tab" aria-controls="profile" aria-selected="false">Cédulas para Enviar a DGPPT</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        @* Pregunta 1 *@
                        <div class="tab-pane fade mt-2 ml-3 show active" id="pregunta_1" role="tabpanel" aria-labelledby="profile-tab">
                            <p class="text-black h5">Cédulas pendientes de enviar a "DGPPT"</p>
                            <div class="col-lg-12 mt-3">
                                <table class="table" width="100%" id="tblPendientes">
                                    <thead>
                                        <tr class="text-center">
                                            <th>#</th>
                                            <th>Servicio</th>
                                            <th>Folio</th>
                                            <th>Subtotal</th>
                                            <th>IVA</th>
                                            <th>Total</th>
                                            <th>Estatus</th>
                                            <th>¿ Enviar a DGPPT ?</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tblTrmaite">
                                        @foreach(var ced in @Model.detalleCedulas)
                                        {
                                            i++;
                                            <tr class="text-center">
                                                <td>@i</td>
                                                <td>@ced.Servicio</td>
                                                <td>@ced.Folio</td>
                                                <td>@String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @ced.Subtotal)</td>
                                                <td>@String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @ced.IVA)</td>
                                                <td>@String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @ced.Total)</td>
                                                <td>@ced.Estatus</td>
                                                <td>
                                                    <div class="form-check-inline i-checks mt-3">
                                                        <input class="enviarDGPPT" type="checkbox" data-size="small" data-toggle="toggle" data-on="<i class='fa fa-check'></i>" data-off="<i class='fa fa-times'></i>"
                                                               data-onstyle="success" data-offstyle="danger" data-style="ios" value="@ced.Id" name="tramitar[]" checked>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @* Fin de la Pregunta 1 *@
                        @* Pregunta 2 *@
                        <div class="tab-pane fade mt-2 ml-3" id="pregunta_2" role="tabpanel" aria-labelledby="profile-tab">
                            <p class="text-black h5">Cédulas asignadas en el oficio para pago</p>
                            <div class="col-lg-12 mt-3">
                                @{ i=0;}
                                <table class="table" width="100%" id="tblOficio">
                                    <thead>
                                        <tr class="text-center">
                                            <th>#</th>
                                            <th>Servicio</th>
                                            <th>Folio</th>
                                            <th>Subtotal</th>
                                            <th>IVA</th>
                                            <th>Total</th>
                                            <th>Estatus</th>
                                            @if (@Model.Estatus.Equals("En Proceso")) {
                                                <th>Acciones</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody id="tblTrmaite">
                                        @foreach(var ced in @Model.cedulasOficio)
                                        {
                                            i++;
                                            <tr class="text-center">
                                                <td>@i</td>
                                                <td>@ced.Servicio</td>
                                                <td>@ced.Folio</td>
                                                <td>@String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @ced.Subtotal)</td>
                                                <td>@String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @ced.IVA)</td>
                                                <td>@String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", @ced.Total)</td>
                                                <td>@ced.Estatus</td>
                                                @if (@Model.Estatus.Equals("En Proceso")) 
                                                {
                                                    <td>
                                                        <button class="btn btn-sm btn-danger" data-toggle="tooltip" title="Eliminar Cédula del Oficio"><i class="fas fa-times"></i></button>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @* Fin de la Pregunta 2 *@
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class=" col-lg-12">
                <button type="button" class="btn btn-primary float-right ml-3 btnTramitar">Trámitar Oficio</button>
                <button type="button" class="btn btn-success float-right btnGuardar">Guardar Oficio</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            var model = @Html.Raw(Json.Serialize(@Model));

            console.log(model);
                        

            $("#tblPendientes").DataTable({
                paging: true,
                bLengthChange: false,
                pageLength: 10,
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
                },
            });

            $("#tblOficio").DataTable({
                paging: true,
                bLengthChange: false,
                pageLength: 10,
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
                },
            });

            $(".btnGuardar").click(function () {
                var cedulas = new Array();
                
                $("[name='tramitar[]']:checked").each(function () {
                    cedulas.push({ OficioId: model.id, CedulaId: $(this).val(), ServicioId: model.servicioId });
                });

                axios.post("/financieros/inserta/cedulasOficio", cedulas).then(response => {
                   Swal.fire({
                       'icon': "success",
                       'title': 'Trámite de Oficio',
                        'html': "Se tramitó el oficio para pago correctamente."
                   }).then(function () {
                       window.location.reload();
                   });
                });
                
            });
        });
    </script>
}


